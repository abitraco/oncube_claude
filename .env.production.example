# ONCUBE GLOBAL - Production Environment Configuration
# Copy this file to .env on the production server and update the values

APP_NAME="ONCUBE GLOBAL"
APP_ENV=production
APP_KEY=base64:FTCGjnnZRfCi9YnvGqK+AKvKNEJeIpYpzAfUKKnVzFA=
APP_DEBUG=false
APP_URL=https://oncube.cloud

LOG_CHANNEL=stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database
DB_CONNECTION=sqlite

# Session & Cache
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (Gmail SMTP)
# IMPORTANT: Use Gmail App Password, not your regular password
# Generate at: https://myaccount.google.com/apppasswords
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USERNAME=oncube2019@gmail.com
MAIL_PASSWORD=your-gmail-app-password-here
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=oncube2019@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# Admin Authentication
ADMIN_PASSWORD=your-secure-admin-password-here

